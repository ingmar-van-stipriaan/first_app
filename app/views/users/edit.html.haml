- provide(:title, 'Edit Profile')

.row
  .col-md-6.col-md-offset-3
    = render "shared/error_messages", :object => @user
    %h1 Edit Profile
    = form_for(@user) do |f|
      .form-group
        = f.label :name, :class => "control-label"
        = f.text_field :name, :class => "form-control", :placeholder => :name
      .form-group
        = f.label :email, :class => "control-label"
        = f.text_field :email, :class => "form-control", :placeholder => :email
      .form-group
        = f.label :password, "Confirm Password", :class => "control-label"
        = f.password_field :password, :class => "form-control", :placeholder => :password
      .form-group
        = f.label :password_confirmation, "Confirm Password", :class => "control-label"
        = f.password_field :password_confirmation, :class => "form-control", :placeholder => :confirmation
      .form-group
        .row
          .col-lg-12
            = gravatar_for @user
            = link_to "Change", "http://gravatar.com/emails", :target => "_blank"
      = f.submit "Save Changes", :class => "btn btn-primary "